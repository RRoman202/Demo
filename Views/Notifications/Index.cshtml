@model IEnumerable<Demo.Data.Models.Notification>

@{
    ViewData["Title"] = "Уведомления";
}



<form class="form-inline d-flex flex-row justify-content-start">
    <input class="form-control mr-sm-2" type="search" placeholder="Поиск" aria-label="Поиск">
    <button class="btn btn-primary my-2 my-sm-0 bg-accent margin1" type="submit">Найти</button>
</form>
@foreach (var noti in Model)
{
    <div class="card bg-accent rounded margin3">
        <div class="card-body bg-additional rounded">
            <div class="d-flex flex-row justify-content-start">
                <div class="d-flex flex-row justify-content-between align-items-center w-100">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="d-flex flex-row">
                            
                            <h5 class="card-title margin2 margin3">@noti.Comment</h5>
                        </div>
                        <div class="d-flex flex-row">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle margin3" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                            </svg>
                            <p class="margin1">@noti.User?.FullName</p>
                        </div>

                        <form asp-action="Delete" asp-route-id="@noti.Id" method="post">
                            <button type="submit" class="btn btn-danger bg-accent p-2">Удалить</button>
                        </form>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}



