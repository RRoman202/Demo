@model Demo.Data.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <h1 class="col-md-6">Изменение заявки</h1>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditForManager" class="mt-3 border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="UserId" class="control-label">Исполнитель</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label asp-for="PeriodExecution" class="control-label">Срок выполнения</label>
                <input asp-for="PeriodExecution" type="date" class="form-control" />
                <span asp-validation-for="PeriodExecution" class="text-danger"></span>
            </div>

            <div class="form-group margin4">
                <input type="submit" value="Изменить" class="btn btn-primary bg-accent" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}